<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".function_menu.ui.CreateUserActivity">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/library_color_FFFFFFFF"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dp_73"
            android:background="@color/library_black"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dp_73"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dp_25" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dp_48">

                    <FrameLayout
                        android:id="@+id/layout_back"
                        android:layout_width="@dimen/base_dp_36"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/imv_back"
                            android:layout_width="@dimen/base_dp_9"
                            android:layout_height="@dimen/base_dp_16"
                            android:layout_gravity="center"
                            android:src="@mipmap/base_icon_arrowhead_left"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tev_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dp_48"
                        android:gravity="center"
                        android:text="@string/library_create_user"
                        android:textColor="@color/library_white"
                        android:textSize="@dimen/base_sp_17" />

                </FrameLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_user"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="550" />

        <TextView
            android:id="@+id/tev_create_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/library_color_FFFFC73B"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/base_dp_15"
            android:paddingTop="@dimen/base_dp_10"
            android:paddingEnd="@dimen/base_dp_15"
            android:paddingBottom="@dimen/base_dp_10"
            android:text="@string/library_create_user"
            android:textColor="@color/library_color_FFFFFF"
            android:textSize="@dimen/base_sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dp_1"
            android:background="@color/library_color_FFFFFF" />

        <TextView
            android:id="@+id/tev_delete_all_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/library_color_FFFFC73B"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/base_dp_15"
            android:paddingTop="@dimen/base_dp_10"
            android:paddingEnd="@dimen/base_dp_15"
            android:paddingBottom="@dimen/base_dp_10"
            android:text="@string/library_delete_all_user"
            android:textColor="@color/library_color_FFFFFF"
            android:textSize="@dimen/base_sp_16" />

    </LinearLayout>

</layout>